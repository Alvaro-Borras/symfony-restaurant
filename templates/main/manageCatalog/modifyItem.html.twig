{% extends 'base.html.twig' %}

{% block title %}Restaurant üç¥{% endblock %}
{% block stylesheet %}
	{{ include('includes/header.html.twig') }}
{% endblock %}
{% block body %}
	<a id="a" href="/"><h1 class="m-0 row justify-content-center">MODIFICAR UN PRODUCTO</h1></a>

	<div class="container custom-container align-items-center d-flex justify-content-center mx-auto mt-4 rounded">
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{{ form_label(form.item, 'Item', {'label_attr': {'class': 'control-label col-sm-4'}}) }}
				<div class="col-sm-10 w-100">
				{{ form_widget(form.item, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.price, 'Price', {'label_attr': {'class': 'control-label col-sm-4'}}) }}
				<div class="col-sm-10 w-100">
				{{ form_widget(form.price, {'attr': {'class': 'form-control','max':'100', 'min':'0'}}) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'control-label col-sm-4'}}) }}
				<div class="col-sm-10 w-100">
				{{ form_widget(form.stock, {'attr': {'class': 'form-control','max':'100', 'min':'0'}}) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
				{{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
				</div>
			</div> 
			<div class="form-group">
				<p><a class="btn btn-warning" href="/catalog">Volver al catalogo</a></p> 
				<a href="/"><input class="btn btn-warning" type="button" value="P√°gina Principal">
			</div>
		{{ form_end(form) }}
